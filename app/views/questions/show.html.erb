<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @question.text %>
</p>

<p>
  <strong>User:</strong>
  <%= @question.user.name %>
</p>
<hr>
  <% if @answers.length > 0 %>
    <% @answers.each do |answer| %>
      <p>Answer: <%= answer.text %></p>
      <p>By: <%= answer.user.name %></p>
      <p><%= link_to 'Show', answer %></p>
    <% end %>
  <% else %>
    <p>Sorry, no answers yet...</p>
  <% end %>

<%= link_to 'Answer', new_answer_path(@question) %> |
<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
